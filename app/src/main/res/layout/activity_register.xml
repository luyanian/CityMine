                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dpi_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_ed"
                    android:hint="请输入所在城市"
                    android:paddingLeft="@dimen/dpi_5"
